# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/law_watch_dev?schema=public"

# Email Notification Settings
NOTIFICATION_EMAIL_FROM=noreply@lawwatch.com
NOTIFICATION_EMAIL_TO=admin@lawwatch.com

# SMTP Settings (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# e-Gov API Settings
E_GOV_API_BASE_URL=https://laws.e-gov.go.jp/api/1
E_GOV_API_TIMEOUT=10000
E_GOV_API_RATE_LIMIT=100

# Application Settings
USE_REAL_E_GOV_API=false

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=INFO